{% extends 'partials/layout' %}
{% block title %}Consultoría empresarial y fiscal | {{ siteName }}{% endblock %}

{% block metas %}
    <link rel="canonical" href="{{siteUrl}}"/>
    <meta content="Consultoría empresarial y fiscal | {{ siteName }}" property="og:title"/>
    <meta content="Grupo CIESC, el mejor despacho  de servicios fiscales, contabilidad, asesoría financiera, outsourcing, auditoria e impuestos en Pachuca. Contamos con expertos en la materia listos para ayudarte" name="description">
    <meta content="Grupo CIESC, el mejor despacho  de servicios fiscales, contabilidad, asesoría financiera, outsourcing, auditoria e impuestos en Pachuca. Contamos con expertos en la materia listos para ayudarte" property="og:description">
    <meta property="og:image" content="/images/og-image.png">
	<meta property="og:url" content="{{siteUrl}}">
	<meta name="twitter:card" content="summary_large_image"/>
{% endblock %}

{% block content %}

   

    <main class="home-hero white pb5-ns">
        {% include 'partials/nav' %}
        <div class="mwc ph3 center tc pv3">
            <img class="w-10-ns center" src="/images/ciesc-icon.svg" alt="Grupo Ciesc Pachuca Logo" />
            <h1 class="f1 fw5">Grupo Ciesc ®</h1>
            <div>
                <h2 class="white-70 f4 fw5">Somos Tu apoyo físcal y contable</h2>
                <h3 class="ttu tracked f2 fw5 mv0 pv1 white">Firma de especialistas</h3>
            </div>
            <a class="special-btn inline-flex pv3 ph4 br3 mt3 f4" href="{{url('contacto')}}">¡Contáctanos!</a>
        </div>
    </main>

    <section class="h-features pv4-ns">
        <div class="mwc center ph3">
            <div class="flex flex-wrap">
                <div class="w-third-ns w-100">
                    <div class="w-90-ns center flex flex-wrap items-center">
                        <div class="w-20">
                            <img class="w-80 center" src="/images/finance-icon.svg" alt="Proceso financiero">
                        </div>
                        <div class="w-80">
                            <h2 class="mv0 pv2 f5 ttu">Proceso financiero</h2>
                            <p class="mv0 lh-copy fw5 f6">Conoce nuestro Proceso Financiero, te sorprenderás.</p>
                        </div>
                    </div>
                </div>
                <div class="w-third-ns w-100">
                    <div class="w-90-ns center flex flex-wrap items-center">
                        <div class="w-20">
                            <img class="w-80 center" src="/images/strategy.svg" alt="Proceso financiero">
                        </div>
                        <div class="w-80">
                            <h2 class="mv0 pv2 f5 ttu">Estrategia a la medida</h2>
                            <p class="mv0 lh-copy fw5 f6">Garantiza un resultado a corto y largo plazo.</p>
                        </div>
                    </div>
                </div>
                <div class="w-third-ns w-100">
                    <div class="w-90-ns center flex flex-wrap items-center">
                        <div class="w-20">
                            <img class="w-80 center" src="/images/re-strategy.svg" alt="Proceso financiero">
                        </div>
                        <div class="w-80">
                            <h2 class="mv0 pv2 f5 ttu">Revisamos la estrategia</h2>
                            <p class="mv0 lh-copy fw5 f6">Definimos los puntos, ponemos en marcha el plan y comenzamos las mejoras.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="ciesc-bg-blue pv5">
        <div class="mwc center ph3">
            <div class="w-60-ns w-100 center tc pb5-ns pv3">
                <h2 class="f5 white fw4 pv0 mv0">Portafolio de servicios</h2>
                <p class="white f1 mv0 pv0">Somos el aliado que tu empresa necesita</p>
            </div>
            <div class="flex flex-wrap">
                {% set services = craft.entries()
                    .section('services')
                    .with(['icon'])
                    .all() %}
                {% for service in services %}
                    {% set cover = service.icon[0] ?? null %}
                    <div class="w-25-ns w-100">
                        <div x-data="{ showDescription: false, icon: 'fa-sharp fa-thin fa-circle-chevron-down' }" class="w-95 center white home__service_card mb3" style="background-color: #E74B04; background-image:url('{{ cover.url() }}');">
                            <div class="white">
                                <div x-on:mouseover="showDescription = true; icon = 'fa-sharp fa-thin fa-circle-chevron-up'" 
                                    x-on:mouseout="showDescription = false; icon = 'fa-sharp fa-thin fa-circle-chevron-down'"  
                                    class="pv4 ph3 pointer" style="background-color: #3A3F47;">
                                    <div class="flex items-center">
                                        <h3 class="white fw5 f3 w-80">{{ service.title }}</h3>
                                        <i :class="icon + ' f2'"></i>
                                    </div>
                                    
                                    <div  x-show="showDescription" x-transition>
                                        <p>{{ service.servFragment|truncate(200, '...') }}</p>
                                        <a class="white no-underline service_card__link relative grow" href="{{ service.url() }}">Ver detalles del servicio <i class="fa-sharp fa-light fa-arrow-up-right"></i></a>
                                    </div>
                                </div>
                                
                            </div>
                            
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="cta tc mt4">
                <a class="prim-btn ph2 pv3 br2 dib" href="{{url('servicios')}}">Conoce todos los servicios</a>
            </div>
        </div>
    </section>

    <section class="h-social pv5-ns pv3 bg-near-white">
        <div class="mwc center ph3">
            <div class="tc">
                <h2 class="fw5 black-60 f2 mb0 pb2">Síguenos en:</h2>

            </div>
            <div class="icons flex flex-wrap justify-center tc">
                <div class="ph4"><a class="f-subheadline no-underline fb-color dim" target="_blank" href="{{ companyInfo.facebook }}"><i class="fab fa-facebook-square"></i></a></div>
                <div class="ph4"><a class="f-subheadline no-underline ld-color dim" target="_blank" href="{{ companyInfo.linkedin }}"><i class="fab fa-linkedin"></i></a></div>
            </div>
        </div>
    </section>

    {% set customers = craft.entries()
        .section('customers')
        .with(['logo'])
        .all()
        %}
    <section class="h-customer pv5-ns pv3">
        <div class="mwc center ph3">
            <div class="tc w-60-ns center w-100">
                <h2 class="fw5 black-60 f2 mb0 pb2">Nuestros clientes</h2>
                <p class="lh-copy f5 fw5 mt0 pt1">Conoce a quienes forman parte de nuestra red de servicios y orgullosamente están satisfechos con nuestro trabajo.
                </p>
            </div>
            <div class="flex flex-wrap  pv4">
                {% for customer in customers %}
                {% set image = customer.logo[0] ?? null %}

                <div class="w-25-ns w-50 pa3 mv3">
                    <img class="w-70 center" src="{{ image.url({ format: 'webp', }) }}" alt="{{ customer.title }}" />
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section id="main_contact_section" class="pv5-ns pv4">
        <div class="mwc center ph3">
            <div class="flex flex-wrap-reverse">
                <div class="w-60-ns w-100 pr2-ns">
                    <img class="db-ns dn"  src="/images/contact_form.webp" alt="Información de contacto Grupo Ciesc" />
                    <div class="flex flex-wrap">
                        <div  class="w-50-ns w-100">
                            <h3 class="mb0 pb0 f3">Suc. Pachuca</h3>
                            <p class="mt1">Los Pinos Nº Interior 22, San Antonio del Desmonte Pachuca, Hgo. C.P 42111</p>
                            <a class="prim-color no-underline" href="tel:7716576633">771 657 66 33</a>
                        </div>
                        <div  class="w-50-ns w-100">
                            <h3 class="mb0 pb0 f3">Suc. Querétaro</h3>
                            <p  class="mt1">Los Pinos Nº Interior 22, San Antonio del Desmonte Pachuca, Hgo. C.P 42111</p>
                            <a class="prim-color no-underline" href="">771 657 66 33</a>
                        </div>
                    </div>
                </div>
                <div class="w-40-ns w-100 pl4-ns pl3-m pl0">
                    <h2 class="f2 mb0 pb0 mt0 pt0">Contacto y asesoría <i class="fa-solid fa-hand-wave"></i></h2>
                    <p class="mt0 pt0 fw4 lh-title">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tubulum fuisse, qua illum, cuius is condemnatus est rogatione, P.</p>
                    <form class="component_form flex flex-wrap" action="">
                        <div class="w-100 mb3">
                            <label class="f6 db" for="">Nombre completo</label>
                            <input placeholder="Tu nombre completo" class="w-100 pv3 ph3" type="text" name="" id="">
                        </div>
                        <div class="w-100 mb3">
                            <label class="f6" for="">Correo electrónico</label>
                            <input placeholder="hola@grupociesc.com"  class="w-100 pv3 ph3" type="text" name="" id="">
                        </div>
                        <div class="w-50 mb3 pr2">
                            <label class="f6" for="">Numero de contacto</label>
                            <input placeholder="5512000000" class="w-100 pv3 ph3" type="text" name="" id="">
                        </div>
                        <div class="w-50 mb3 pl2">
                            <label for="">Empresa</label>
                            <input placeholder="Nombre de tu empresa" class="w-100 pv3 ph3" type="text" name="" id="">
                        </div>
                        <div>
                            <h4 class="mt0 pv0 f5 mb3">¿Cómo podemos ayudarte?</h4>
                            {% set services =  craft.entries().section('services').all() %}
                            <div class="flex flex-wrap items-center mb3">
                                {% for service in services %}
                                <div class="w-50 mb2 pb1 pr2">
                                    <input type="checkbox" name="vehicle1" value="Bike">
                                    <label class="o-70" for="vehicle1"> {{ service.title }}</label><br>
                                </div>
                                
                                {% endfor %}
                            </div>
                           


                        
                        </div>
                        <button class="prim-btn db w-100 tc br2 b--transparent pv3 f4 pointer">Enviar contacto</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    {% include 'partials/footer' %}

{% endblock %}