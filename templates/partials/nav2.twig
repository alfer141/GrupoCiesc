{% import "_macros.twig" as macros %}


<div class="pre-nav prim-bg f6">
    <div class="mwc center ph3">
        <div class="flex flex-wrap justify-between items-center">
            <div>
                <ul class="list pl0">
                    <li class="dib pr3-ns"><a class="no-underline white dim" href="{{url('blog')}}">Blog</a></li>
                    <li class="dib"><a class="no-underline white dim"  href="{{url('contacto')}}">Contacto</a></li>
                </ul>
            </div>

            <div>
                <a class="white no-underline pr3-ns" href="{{ companyInfo.facebook }}"><i class="fab fa-facebook-square"></i></a>
                <a class="white no-underline" href="{{ companyInfo.linkedin }}"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </div>
</div> 

<nav class="pv3 sticky bb b--white-10 z-9999">
    <div class="mwc center ph3">
        <div class="flex flex-wrap justify-between items-center">
            <div>
                <a class="no-underline ttu white fw7 f4" href="{{url('/')}}">Grupo CiescÂ®</a>
            </div>
            <div class="">
                <ul class="list pl0 dib-ns dn">
                    <li class="dib pl4"><a class="white nav-link f6 {{ macros.is_active('') }}" href="{{url('/')}}">Inicio</a></li>
                    <li class="dib pl4 relative" x-data="{ dropdownServices: false }">
                        <a @click="dropdownServices = !dropdownServices" class="white nav-link f6 pointer {{ macros.is_active('servicios') }}">
                        Portafolio de Servicios <i class="fa-sharp fa-regular fa-angle-down"></i>
                        </a>
                        {% set services = craft.entries().section('services').all() %}
                        <ul x-show="dropdownServices"  x-transition.duration.300ms  @click.away="dropdownServices = false"  style="width: 280px; max-width:280px;" class="list mt3 pv3 ph4 absolute bg-white br2 shadow-2">
                            {% for service in services %}
                            <li class="db center"><a class="no-underline mid-gray pv2 dib center w-auto dim" href=""> {{ service.title }} </a></li>
                            {% endfor %}
                            <li><a class="prim-color no-underline fw6 pv2 dib center w-auto dim" href="{{url('servicios')}}"><i class="fa-duotone fa-grid"></i> Ver todos</a></li>
                        </ul>
                    </li>
                    <li class="dib pl4"><a class="white nav-link f6 {{ macros.is_active('nosotros') }}" href="{{url('nosotros')}}">Nosotros</a></li>
                    <li class="dib pl4"><a class="white nav-link f6 {{ macros.is_active('blog') }}" href="{{url('blog')}}">Blog</a></li>
                    <li class="dib pl4"><a class="white nav-link f6 {{ macros.is_active('contacto') }}" href="{{url('contacto')}}">Contacto</a></li>
                </ul>
                <!-- The overlay -->
                    <div id="myNav" class="overlay">

                        <!-- Button to close the overlay navigation -->
                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    
                        <!-- Overlay content -->
                        <div class="overlay-content">
                            <a class="{{ macros.is_active('') }} white" href="{{url('/')}}">Inicio</a>
                            <a class="{{ macros.is_active('servicios') }}" href="{{url('servicios')}}">Servicios </a>
                            <a class="{{ macros.is_active('nosotros') }}" href="{{url('nosotros')}}">Nosotros</a>
                            <a class="{{ macros.is_active('blog') }}" href="{{url('blog')}}">Blog</a>
                            <a class="{{ macros.is_active('contacto') }}" href="{{url('contacto')}}">Contacto</a>
                        </div>
                    
                    </div>
  
                    <!-- Use any element to open/show the overlay navigation menu -->
                    <span class="db dn-ns" onclick="openNav()"><i class="far fa-bars"></i></span>

               
            </div>
        </div>
    </div>
</nav>


<script>
    /* Open when someone clicks on the span element */
function openNav() {
  document.getElementById("myNav").style.width = "100%";
}

/* Close when someone clicks on the "x" symbol inside the overlay */
function closeNav() {
  document.getElementById("myNav").style.width = "0%";
}
</script>