{% extends 'partials/layout' %}
{% block title %}Noticias y recomendaciones sobrematerial Fiscal y Contable | {{ siteName }}{% endblock %} 
{% block metas %}
    <link rel="canonical" href="{{siteUrl}}"/>
    <meta content="Noticias y recomendaciones sobrematerial Fiscal y Contable | {{ siteName }}" property="og:title"/>
    <meta content="" name="description">
    <meta content="" property="og:description">
    <meta property="og:image" content="/images/og-image.png">
	<meta property="og:url" content="{{siteUrl}}">
	<meta name="twitter:card" content="summary_large_image"/>
{% endblock %}

{% block content %}
    {% include 'partials/nav'%}
    <main class="blog-hero flex items-center">
        <div class="mwc center ph3 tc">
            <h1 class="ttu fw5 white">Nuestro <span class="b">Blog y noticias</span></h1>
            <p class="f3 fw5 white">Mantente al tanto de tendencias y noticias Corporativas</p>
            <a class="special-btn ph3 pv3 br2 inline-flex tc db center" href="{{url('contacto')}}">Contáctanos</a>
        </div>
    </main>

    <section>
        <div class="mwc center ph3">
            <div class="w-60-ns center w-100 tc">
                <h2 class="f2 fw5 black-50">Infórmate</h2>
                <p class="lh-loose">Te mantenemos informado sobre nuestras 
                actividades y noticias, entérate de todo</p>
                <h3 class="fw5 f5">Bienvenido a nuestro Blog, noticias recientes</h3>
            </div>

            {% set articles = craft.entries()
                .section('blog')
                .with(['thumbImg'])
                .all() %}
            <div class="flex flex-wrap items-start">
                
                <div class="w-60-ns w-100 ph4-ns ph0">
                    {% for article in articles %}
                    {% set img = article.thumbImg[0] ?? null %}
                    <a class="no-underline black-60" href="{{ article.url }}">
                        <article class="pv4">
                            <img class="br2" src="{{ img.url }}" alt="{{ article.title }}" />
                            <h1>{{ article.title }}</h1>
                            <h3 class="f6 fw5 black-60">Escrito por: <span class="b prim-color">{{ article.author }}</span> </h3>
                            <p class="lh-copy tj">{{ article.fragment }}</p>
                            <div class="prim-btn pa3 br2 dib">Leer más</div>
                        </article>
                    </a>
                    <hr>
                    {% endfor %}
                </div>
                

                <div class="w-40-ns w-100 ph4-ns ph0">
                    <h2>Explora por categoría</h2>
                    <div class="br3 pa3 bg-near-white">
                        <ul class="list pl0">
                            <li><a class="no-underline black-60" href="">Categoría 1 <i class="fal fa-angle-right"></i></a></li>
                        </ul>
                    </div>
                    <hr>
                    <div class="br3 pa3 bg-near-white">
                        Aviso
                        <p>Todos los Blog's estan a tu disposición y son creados por Grupo CIESC ® para darte un mejor servicio</p>
                    </div>
                </div>
            </div> 
        </div>
    </section>

    {% include 'partials/footer'%}
{% endblock %}